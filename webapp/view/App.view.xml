<mvc:View controllerName="sap.ui.demo.food.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
   <Shell backgroundColor="#fff">
      <App class="myAppDemoWT">
         <pages>
            <Page title="{i18n>homePageTitle}">
               <content>
                  <mvc:XMLView viewName="sap.ui.demo.walkthrough.view.FoodList" />
               </content>

               <footer>
                  <Toolbar>
                     <ToolbarSpacer />
                     <Button text="{i18n>showHelloButtonText}" press=".onShowHello" />
                  </Toolbar>
               </footer>
            </Page>
         </pages>
      </App>
   </Shell>
</mvc:View>